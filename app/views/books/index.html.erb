<div class="container">
  <div class="row">
    <div class="col-6">
     <h1> User Info</h1>


     <h1>Book</h1>
     <%= form_with model: @book do |f| %>

     <h4>Title</h4>
     <%= f.text_field :title %>

     <h4>Opinion</h4>
     <%= f.text_area :body %>

     <br>
     <%= f.submit 'Create Book' %>

     <% end %>
  </div>

  <div class="col-6">
    <p>title</p>
    <p>Opinion</p>
    <% @books.each do |book| %>
       <p><%= book.title %></p>
       <p><%= book.body %></p>
    <% end %>
  </div>

 </div>
</div>
